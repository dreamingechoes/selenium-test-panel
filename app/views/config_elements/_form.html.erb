<%= form_for(@config_element, role: :form) do |f| %>
  <% if @config_element.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@config_element.errors.count, "error") %> prohibited this config element from being saved:</h2>

      <ul>
      <% @config_element.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :key %>
    <%= f.text_field :key, class: 'form-control', required: true %>
    <p class="help-block">Key of the config element.</p>
  </div>

  <div class="form-group">
    <%= f.label :value %>
    <%= f.text_field :value, class: 'form-control', required: true %>
    <p class="help-block">Value of the config element.</p>
  </div>

  <div class="actions">
    <%= f.submit 'Submit', class: 'btn btn-success' %>
  </div>
<% end %>
