<% content_for(:page_header) do %>
  <%= @case_test.title %>
<% end %>
<% content_for :panel_heading do %>Case Test: <%= @case_test.title %><% end %>

<p>
  <strong>Title:</strong>
  <%= @case_test.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @case_test.description %>
</p>

<p>
  <strong>Url:</strong>
  <%= link_to @case_test.url %>
</p>

<p>
  <strong>Date:</strong>
  <%= @case_test.created_at %>
</p>

<p>
  <textarea id="json-input" autocomplete="off" class="form-control hidden" rows="8">
  <%= @json_object %>
  </textarea>
</p>

<p>
  <pre id="json-renderer"></pre>
</p>

<% content_for(:extra_scripts) do %>
  <script type="text/javascript">
    $(document).ready(function() {
      try {
        var input = eval('(' + $('#json-input').val() + ')');
      }
      catch (error) {
        return alert("Cannot eval JSON: " + error);
      }
      var options = {
        collapsed: false,
        withQuotes: true
      };
      $('#json-renderer').jsonViewer(input, options);
    });
  </script>
<% end %>
